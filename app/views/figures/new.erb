<%unless locals.empty?%>
  <%=message%>
<%end%>

<h1>New Figure</h1>
<br />
<br />
<form action='/figures' method='POST'>
  <label>Figure Name: <input type='text' name='figure[name]' id='figure_name'/></label>
  <br />
  <label>Pick From Existing Titles:</label>
  <%Title.all.each do |title|%>
    <input type='checkbox' id='title_<%=title.id%>' name='figure[title_ids][]' value='<%= title.id %>'><%=title.name%></input>
  <%end%>
  <br />
  <label>Create New Title: <input type='text' name='title[name]' id='new_title'/></label>
  <br />
  <label>Pick From Existing Landmarks:</label>
  <%Landmark.all.each do |landmark|%>
    <input type='checkbox' id='landmark_<%=landmark.id%>' name='figure[landmark_ids][]' value='<%= landmark.id %>'><%=landmark.name%></input>
  <% end %>
  <br />
  <label>Create New Landmark: </label>
  <label>Landmark Name: <input type='text' name='landmark[name]' id='new_landmark'></label>
  <br />
  <br />
  <input type='submit' value='Create New Figure'>
</form>
