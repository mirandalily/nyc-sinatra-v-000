<h1>Edit Figure</h1>
<br />
<br />
<form action="/figures/<%=@figure.id%>" method='POST'>
  <input type='hidden' name='_method' value='PATCH' id='hidden'/>
  <label>Figure Name: <input type='text' id='figure_name' name='figure[name]' value='<%= @figure.name%>'></label>
  <br />
  <label>Titles:</label>
  <%Title.all.each do |title|%>
    <p><input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%= title.name%></input></p>
  <%end%>
  <br />
  <label>Add New Title: <input type='text' id='new_title' name='title[name]'></label>
  <br />
  <label>Landmarks:</label>
  <%Landmark.all.each do |landmark|%>
    <p><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name%></input></p>
  <%end%>
  <br />
  <label>Add New Landmark: <input  type="text" name="landmark[name]" id="new_landmark"></input></label>
  <br />
  <br />
  <input type='submit' value='Edit Figure' />
</form>
